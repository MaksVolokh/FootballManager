@model FootballManagerBLL.Dto.UserDto.RegistrationModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Registration</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-image: url("/images/reg.jpg");
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            color: black;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 100px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
            color: black;
        }

        .text-danger {
            color: red;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 center-block">
                <h3>Registration</h3>
                <form asp-action="Registration" method="post">
                    <div class="form-group">
                        <label>FirstName</label>
                        <input type="text" class="form-control" asp-for="FirstName" />
                        <span class="text-danger" asp-validation-for="FirstName"></span>
                    </div>

                    <div class="form-group">
                        <label>LastName</label>
                        <input type="text" class="form-control" asp-for="LastName" />
                        <span class="text-danger" asp-validation-for="LastName"></span>
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control" asp-for="Email" />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>

                    <div class="form-group">
                        <label>Username</label>
                        <input type="text" class="form-control" asp-for="Username" />
                        <span class="text-danger" asp-validation-for="Username"></span>
                    </div>

                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" asp-for="Password" />
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>

                    <div class="form-group">
                        <label>Password confirm</label>
                        <input type="password" class="form-control" asp-for="PasswordConfirm" />
                        <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
                    </div>

                    <div class="form-group">
                        <label>Player position</label>
                        <select class="form-control" asp-for="PlayerPosition">
                            <option value="">-- Select position --</option>
                            <option value="ST">Striker (ST)</option>
                            <option value="CF">Centre Forward (CF)</option>
                            <option value="SS">Second Striker (SS)</option>
                            <option value="WG">Winger (WG)</option>
                            <option value="AM">Attacking Midfielder (AM)</option>
                            <option value="CM">Central Midfielder (CM)</option>
                            <option value="DM">Defensive Midfielder (DM)</option>
                            <option value="BBM">Box-to-Box Midfielder (BBM)</option>
                            <option value="WM">Wide Midfielder (WM)</option>
                            <option value="FB">Full-back (FB)</option>
                            <option value="WB">Wing-back (WB)</option>
                            <option value="CB">Centre-back (CB)</option>
                            <option value="SW">Sweeper (SW)</option>
                            <option value="LB">Libero (LB)</option>
                            <option value="GK">Goalkeeper (GK)</option>
                        </select>
                        <span class="text-danger" asp-validation-for="PlayerPosition"></span>
                    </div>

                    @if (TempData["msg"] != null)
                    {
                        <div class="form-group">
                            <span class="text-info">@TempData["msg"]</span>
                        </div>
                    }

                    <button type="submit" class="btn btn-info">Registration</button>
                    <a class="btn btn-primary" href="/UserAuthentication/Login">Login</a>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
